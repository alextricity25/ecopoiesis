[Unit]
Description=craton api openstack service
After=syslog.target
After=network.target

[Service]
Type=simple
ExecStart=/opt/craton/bin/python3.5 /opt/craton/bin/craton-api --config-file=/etc/craton/craton-api.conf

# Give a reasonable amount of time for the server to start up/shut down
TimeoutSec=300
Restart=on-failure
RestartSec=150

[Install]
WantedBy=multi-user.target
